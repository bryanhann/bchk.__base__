#!/bin/bash

maybe () {
    local name=$(basename $1)
    local main=${1}/main
    local doc=${1}/usage.short
    [ -f ${main} ] || return
    printf "   %-1s ${name}\t"
    [ -f ${doc} ] && printf ': ' && cat ${doc} || echo

}

main () {
    stem=
    path=${BCH_HACK_APPS}
    for ii in $*; do
        stem=${stem}/${ii}
        path=${path}/${ii}
        [ -e ${path}  ] || { echo bad command: [$stem]; return 87; }
    done
    echo USAGE:
    echo "    ${BCH_HACK_NAME} $* [SUBCOMMAND]" 
    echo
    echo SUBCOMMANDS:
    for ii in $(ls ${path}); do
        maybe ${path}/${ii}
    done
    [ -f ${path}/usage.long ] && cat ${path}/usage.long
}

main $*
