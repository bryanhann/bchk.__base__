#!/bin/bash
which .hackbin > /dev/null || { export PATH=${PATH}:${BCH_HACK_ROOT}/bin ; }

case .${1} in
    .|.-h|.--help|.help)
        shift
        arf-help $*
        exit
        ;;
    .--arf)
        shift
        arf-$*
        exit
        ;;
    *)
        ${BCH_HACK_APPS}/main $*
        exit $?
        ;;
esac



