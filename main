#!/bin/bash
which .hackbin > /dev/null || { export PATH=${PATH}:${BCHK_ROOT}/bin ; }

case .${1} in
    .|.-h|.--help|.help)
        shift
        arf-help $*
        exit
        ;;
    .--arf)
        shift
        [ "$1" == "" ] && ls ${BCHK_ROOT}/bin || arf-$*
        ;;
    *)
        ${BCHK_APPS}/main $*
        exit $?
        ;;
esac



